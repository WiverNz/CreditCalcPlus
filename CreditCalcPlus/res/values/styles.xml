<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="EditText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">34dp</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:textSize">12sp</item>
	</style>
        
    <style name="EditText_numberSigned" parent="EditText">
        <item name="android:inputType">numberSigned</item>
    </style>
    <style name="EditText_numberDecimal" parent="EditText">
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="EditText_date" parent="EditText">
        <item name="android:inputType">date</item>
    </style>
    
    
</resources>
